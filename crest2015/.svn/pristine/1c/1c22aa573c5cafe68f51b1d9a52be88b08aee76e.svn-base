    /*
    return a list of country in json format based on a term
    **/
    public function search(){
      $term = Input::get('term');
      $result = Barangay::where('barangay_name','LIKE','%$term%').orWhere('municipality_city_id','LIKE','%$term%')->get();
      return Response::json($result);
    }

    public function dataJson(){
      $result = Barangay::where('is_active',1)->get();
      return response()->json($result);
    }

